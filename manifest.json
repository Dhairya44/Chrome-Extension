{
    "manifest_version": 3,
    "name": "Website Blocker",
    "version": "1.0",
    "description": "Block access to certain websites",
    "permissions": [
      "activeTab",
      "tabs",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png"
      }
    },
    "icons": {
      "16": "images/icon16.png"
    },
    "content_scripts": [],
    "background": {
      "service_worker": "background.js"
    }
  }
  